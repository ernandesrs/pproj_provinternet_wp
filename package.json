{
  "private": true,
  "devDependencies": {
    "css-loader": "^6.8.1",
    "npm-run-all": "^4.1.5",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "dev": "npm-run-all --parallel tailwindwatch watch",
    "tailwindwatch": "tailwindcss -i ./src/assets/css/main.css -o ./src/assets/css/styles.css --minify",
